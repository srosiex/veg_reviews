
    <div class="meal_form">
<%= form_for(@meal) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
 
    <br>

        <%= f.label :description %><br>
        <%= f.text_area :description %>

        <br>
  Select a restaurant:
  <br>
        <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, include_blank: true %>

        <br>
    Create new restaurant
    <br>
        <%= f.fields_for :restaurant do |r| %>
            <%= r.label :name %>
            <%= r.text_field :name %>
            <% end %>

            <br>
    <%= f.submit  %>
    
    <% end %>
    </div>