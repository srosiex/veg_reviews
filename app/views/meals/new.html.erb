<h1>Make a new meal</h1>

<%= form_for(@meal) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <br>
    <div>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </div>
 
    <p>Select a restaurant:</p>
    <div>
        <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, include_blank: true %>
    </div>
    <p>Create new restaurant</p>
    <div>
        <%= f.fields_for :restaurant do |r| %>
            <%= r.label :name %>
            <%= r.text_field :name %>
            <% end %>
    </div>

    <%= f.submit  %>
    <% end %>